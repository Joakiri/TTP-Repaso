<section class = ModifyTarea>

<h3>Ingrese nuevos datos para su tarea</h3>
@if(ViewBag.message != ""){
  <h2>@ViewBag.message</h2>
}
<form action = '@Url.Action("endEditTarea", "Home")' method = "POST">
    <input type="text" name="titulo" placeholder="Ingrese nuevos datos para tarea"/><br/>
    <input type="textArea" name="descripcion" placeholder="Ingrese una descripcion"/><br/>
    <input type="submit" value="Mandar">
</form>
</section>